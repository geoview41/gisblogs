---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description="Cartography, GIS, and map notes." />
		<style>
			/* Full-bleed hero */
			main {
				position: relative;
				min-height: calc(100vh - 120px);
				display: grid;
				place-items: center;
				padding: 0;
				margin: 0;
				overflow: hidden;
			}

			/* Make the whole hero clickable */
			.heroLink {
				position: absolute;
				inset: 0;
				z-index: 1;
				text-decoration: none;
			}

			/* Image: as big as possible without cropping */
			.heroImage {
				position: absolute;
				inset: 0;
				width: 100%;
				height: 100%;
				object-fit: contain;
				transform: scale(1.01);
				animation: fadeIn 900ms ease-out both;
			}

			/* Subtle cartography vibe: grid overlay */
			.gridOverlay {
				position: absolute;
				inset: 0;
				pointer-events: none;
				z-index: 2;
				background:
					linear-gradient(to right, rgba(0,0,0,0.08) 1px, transparent 1px),
					linear-gradient(to bottom, rgba(0,0,0,0.08) 1px, transparent 1px);
				background-size: 48px 48px;
				mix-blend-mode: multiply;
				opacity: 0.25;
				animation: fadeIn 1200ms ease-out both;
			}

			/* Label block */
			.label {
				position: absolute;
				left: 1.25rem;
				bottom: 1.25rem;
				z-index: 3;
				max-width: min(640px, calc(100vw - 2.5rem));
				background: rgba(255, 255, 255, 0.72);
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
				border: 1px solid rgba(0, 0, 0, 0.08);
				border-radius: 16px;
				padding: 1rem 1.1rem;
				box-shadow: var(--box-shadow);
			}

			.kicker {
				margin: 0 0 0.35rem;
				color: rgb(var(--gray));
				font-size: 0.9rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
			}

			h1 {
				margin: 0 0 0.45rem;
				line-height: 1.05;
				font-size: clamp(2rem, 4vw, 3.25rem);
				letter-spacing: 0.02em;
			}

			.subtitle {
				margin: 0 0 0.85rem;
				color: rgba(0, 0, 0, 0.72);
				font-size: 1.05rem;
			}

			.actions {
				display: flex;
				gap: 0.6rem;
				flex-wrap: wrap;
				align-items: center;
			}

			.cta {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.7rem 0.9rem;
				border-radius: 12px;
				text-decoration: none;
				border: 1px solid rgba(0, 0, 0, 0.12);
				transition: 0.2s ease;
				font-weight: 600;
			}

			.cta.primary {
				background: rgb(var(--accent));
				color: white;
				border-color: transparent;
			}

			.cta.secondary {
				background: white;
				color: rgb(var(--black));
			}

			.cta:hover {
				transform: translateY(-1px);
				box-shadow: var(--box-shadow);
			}

			.hint {
				color: rgb(var(--gray));
				font-size: 0.9rem;
				margin-left: 0.15rem;
			}

			@keyframes fadeIn {
				from { opacity: 0; transform: scale(1.03); }
				to { opacity: 1; transform: scale(1.01); }
			}

			@media (max-width: 720px) {
				main { min-height: calc(100vh - 90px); }
				.label { left: 0.85rem; right: 0.85rem; bottom: 0.85rem; }
			}
		</style>
	</head>

	<body>
		<Header />

		<main>
			<!-- whole hero clickable -->
			<a class="heroLink" href="/blog/" aria-label="Enter the blog"></a>

			<img class="heroImage" src="/DdM.png" alt="Cartographic visual" />
			<div class="gridOverlay" aria-hidden="true"></div>

			<section class="label">
				<p class="kicker">Cartography • GIS • Map notes</p>
				<h1>GEOVIEW</h1>
				<p class="subtitle">Exploring places through maps, data, and spatial stories.</p>

				<div class="actions">
					<a class="cta primary" href="/blog/">
						Enter the blog <span aria-hidden="true">→</span>
					</a>
					<a class="cta secondary" href="/about/">About</a>
					<span class="hint">Tip: click anywhere on the image</span>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
