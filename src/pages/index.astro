---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description="Home" />
		<style>
			main {
				display: flex;
				align-items: center;
				justify-content: center;
				min-height: calc(100vh - 120px);
				padding: 2rem;
			}

			.hero-image {
				max-width: 100%;
				max-height: 130vh;
				object-fit: contain;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<img
				src="/DdM.png"
				alt="Homepage image"
				class="hero-image"
			/>
		</main>
		<Footer />
	</body>
</html>
